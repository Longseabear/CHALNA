<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F2F2EF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#F2F2EF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerHorizontal="true"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:scaleType="center"
            android:src="@drawable/default_preview"
            android:id="@+id/preview_framelayout"
            android:layout_below="@+id/project_save_name">
            <ImageView
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/stroke_imageview"
                android:scaleType="fitXY"
                android:src="@drawable/default_preview"
                android:id="@+id/preview_image_viewer"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F2F2EF"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <SeekBar
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:progress="50"
            android:max="100"
            android:src="@drawable/mini_setting"
            android:id="@+id/preview_seekbar"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>