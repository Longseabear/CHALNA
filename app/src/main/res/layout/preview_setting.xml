<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/save_dialog_width"
        android:layout_centerHorizontal="true"
        android:hint="WIDTH"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/save_dialog_height"
        android:layout_centerHorizontal="true"
        android:hint="HEIGHT"
        android:layout_below="@+id/save_dialog_width" />
    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="확인"
        android:id="@+id/loginButton"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/save_dialog_height"
        android:layout_toLeftOf="@+id/signupButton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="취소"
        android:id="@+id/signupButton"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignRight="@+id/save_dialog_height" />
</RelativeLayout>